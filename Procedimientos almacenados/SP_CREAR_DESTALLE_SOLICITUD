CREATE OR REPLACE PROCEDURE SP_CREAR_DESTALLE_SOLICITUD (
IN_SOLICITUD_COMPRA_ID IN NUMBER,
IN_PRODUCTO IN VARCHAR2,
IN_KILOGRAMOS IN NUMBER,
OUT_GLOSA 		OUT VARCHAR2,
OUT_ESTADO 		OUT NUMBER,
OUT_ID_SALIDA 	OUT NUMBER
)
AS 
BEGIN

INSERT INTO FERIA2.detalle_solicitud (
SOLICITUD_COMPRA_ID,
PRODUCTO,
KILOGRAMOS
)
VALUES(
IN_SOLICITUD_COMPRA,
IN_PRODUCTO,
IN_KILOGRAMOS
)
RETURNING ID INTO OUT_ID_SALIDA;

    EXCEPTION
        WHEN OTHERS THEN
            OUT_ESTADO := -1;
            OUT_GLOSA := feria2.FN_GET_GLOSA_ERROR;
  NULL;
END SP_CREAR_DESTALLE_SOLICITUD;
